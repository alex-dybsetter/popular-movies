<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/reviewerId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Reviewer said..."
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="@dimen/horizontal_margin"
        app:layout_goneMarginStart="@dimen/horizontal_margin"
        android:layout_marginTop="@dimen/new_grouping_top_margin"
        android:textColor="@color/primary_text"
        android:textSize="18sp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/reviewContent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        tools:text="REVIEW REVIEW REVIEW"
        android:layout_marginLeft="@dimen/horizontal_margin"
        app:layout_constraintLeft_toLeftOf="@+id/reviewerId"
        android:layout_marginTop="@dimen/top_margin"
        app:layout_constraintTop_toBottomOf="@+id/reviewerId"
        android:layout_marginRight="@dimen/horizontal_margin"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginStart="@dimen/horizontal_margin"
        android:layout_marginEnd="@dimen/horizontal_margin"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="@dimen/bottom_margin"
        app:layout_constraintVertical_bias="0.0" />
</android.support.constraint.ConstraintLayout>